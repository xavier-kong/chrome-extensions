{
    "name": "Stay Productive",
    "description": "Reducing social media use to you can do the things you actually enjoy.",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "*://discord.com/*",
                "*://twitter.com/*",
                "*://www.instagram.com/*",
                "*://www.facebook.com/*",
                "*://www.linkedin.com/*"
            ],
            "css": ["inject.css"]
        }
    ],
    "permissions": ["tabs", "webNavigation", "storage", "webRequest"],
    "host_permissions": ["*://www.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    }
}
